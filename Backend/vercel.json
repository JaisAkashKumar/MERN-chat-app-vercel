{
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "build/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)", 
      "destination": "/server.js"
    },
    {
      "source": "/(.*)", 
      "destination": "/build/index.html"
    }
  ]
}

